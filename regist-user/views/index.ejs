<!DOCTYPE html>
<html>
  <head>
    <title>ユーザー一覧</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <h1>ユーザー一覧</h1>

    <a href="/add" class="btn btn-primary">新規登録</a>

    <table class="table">
      <tr>
        <th>ID</th>
        <th>ユーザー名</th>
        <th>年齢</th>
        <th>登録日</th>
      </tr>
      <% for (user in usersData) { %>
      <tr>
        <% let {id, name, age, date} = usersData[user] %>
        <td class="id"><%= id %></td>
        <td class="name"><%= name %></td>
        <td class="age"><%= age %></td>
        <td class="date"><%= date %></td>
        <td><a href="/edit/<%= id %>" class="btn btn-warning">編集 </a></td>
        <td><a href="/delete/<%= id %>" class="btn btn-danger">削除</a></td>
      </tr>
      <% }%>
    </table>
  </body>
</html>
